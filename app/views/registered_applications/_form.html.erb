<%= form_for(@app) do |app| %>
  <% if @app.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@app.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
        <% @app.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <h1>Registration Form</h1>
    </div>
    <div class="col-md-8">
      <%= form_for @app do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: "Type your name here" %>
        </div>
        <div class="form-group">
          <%= f.label :url %>
          <%= f.url_field :url, :required => true, placeholder: "Enter URL" %>
        </div>
        <div class="form-group">
          <%= f.submit "Register", class: 'btn btn-success' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
